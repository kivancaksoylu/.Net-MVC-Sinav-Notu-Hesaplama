@using Proje.ViewModels;
@model KullaniciViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="width:30%; margin-top:10%">
        <h2 style="text-align:center">Giriş</h2>
        @using (Html.BeginForm("Login", "Page", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Sicil_No)
                @Html.TextBoxFor(m => m.Sicil_No, new { @class = "form-control", placeholder = "Sicil No" })
                @Html.ValidationMessageFor(m => m.Sicil_No, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Sifre)
                @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", placeholder = "Şifre", @type = "password" })
                @Html.ValidationMessageFor(m => m.Sifre, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-block btn-dark">Giriş Yap</button>
            <span style="color:red;">@ViewBag.Mesaj</span>
        }
    </div>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
